{
  "parser": "babel-eslint",
  "rules": {
    "strict": 0,
    //for forms.CharField, exceptions don't seem to work atm
    "new-cap": false,
    "no-multi-spaces": false,
    "no-console": false,
    "no-underscore-dangle": false,
    "no-undef": false, //REMOVE once import bug is fixed
    "curly": [2, "multi-line"],
    "quotes": "single"
  },
  "ecmaFeatures": {
    "jsx": true,
    "modules": true,
    "module":  true
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "globals": {
    "Promise": true
  }
}
